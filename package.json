{
  "name": "amanah-go",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=amanah-go-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name amanah-go",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply amanah-go-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply amanah-go-db",
    "db:seed": "wrangler d1 execute amanah-go-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute amanah-go-db --local",
    "db:console:prod": "wrangler d1 execute amanah-go-db",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "git:commit": "git add . && git commit -m"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "hono": "^4.11.2",
    "stripe": "^20.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251217.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "better-sqlite3": "^12.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
